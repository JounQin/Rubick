    "koa-static": "^5.0.0",
    "koa-static-cache": "^5.1.2",
    "lodash": "^4.17.11",
    "lru-cache": "^5.1.1",
    "mkdirp": "^0.5.1",
    "path-to-regexp": "^3.0.0",
    "qs": "^6.6.0",
