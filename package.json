{
  "name": "rubick",
  "version": "0.0.1",
  "description": "Alauda front end project Rubick built with Vue stack + TypeScript, just for study.",
  "main": "index.js",
  "repository": "https://github.com/JounQin/Rubick.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env DEBUG=rubick:* ts-node server",
    "start": "cross-env NODE_ENV=production DEBUG=rubick:* ts-node server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack/client.ts --color --progress -p",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack/server.ts --color --progress -p",
    "build": "rimraf dist && yarn build:client && yarn build:server",
    "lint": "tslint -e 'node_modules/**' -t stylish '**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.ts": ["tslint -t stylish --fix", "git add"]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "dependencies": {
    "axios": "^0.17.1",
    "koa": "^2.4.1",
    "koa-compress": "^2.0.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "lru-cache": "^4.1.1",
    "regenerator-runtime": "^0.11.0",
    "vue": "^2.5.9",
    "vue-property-decorator": "^6.0.0",
    "vue-router": "^3.0.0",
    "vue-server-renderer": "^2.5.9",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.3",
    "@types/debug": "^0.0.30",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/friendly-errors-webpack-plugin": "^0.1.1",
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/koa": "^2.0.41",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-logger": "^2.0.3",
    "@types/koa-router": "^7.0.26",
    "@types/koa-static": "^3.0.2",
    "@types/lru-cache": "^4.1.0",
    "@types/node": "^8.0.53",
    "@types/pug": "^2.0.4",
    "@types/webpack": "^3.8.1",
    "@types/webpack-dev-middleware": "^1.9.4",
    "@types/webpack-hot-middleware": "^2.16.2",
    "@types/webpack-merge": "^4.1.1",
    "@types/webpack-node-externals": "^1.6.0",
    "chokidar": "^1.7.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "debug": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "pug": "^2.0.0-rc.4",
    "pug-html-loader": "^1.1.5",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sw-precache-webpack-plugin": "^0.11.4",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2",
    "vue-loader": "^13.5.0",
    "vue-template-compiler": "^2.5.9",
    "webpack": "3.8.1",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  }
}
